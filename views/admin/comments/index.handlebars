<h1>Comments</h1>
{{> home/form-msgs}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Owner</th>
            <th scope="col">Author</th>
            <th scope="col">Permission</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>

        {{#each comments}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{user.firstName}} {{user.lastName}}</td>
            <td>{{body}}</td>
            <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}}  checked {{/if}}  name="approveComment"></td>
            <td>{{generateTime date 'LL LTS'}}</td>
            <td class="text-center">
                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                    <button class="btn btn-danger" type="submit">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h1>Edit Category</h1>
            <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="title" placeholder="Enter title"
                        autocomplete="false" value="{{category.name}}" required>
                </div>
                <button class="btn btn-primary" type="submit">Update Category</button>
            </form>
        </div>
    </div>
</div>
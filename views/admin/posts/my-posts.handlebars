<h1>All posts</h1>
{{> home/form-msgs}}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Post Link</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td style="width: 10%;"><img src="/uploads/{{file}}" alt="{{file}}"  class=" img-rounded img-thumbnail  "></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateTime date 'LL LTS'}}</td>
            <td class="text-center"><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td class="text-center">
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button class="btn btn-danger" type="submit">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>